#!/bin/bash

new_sink=$(pacmd list-sinks | grep index | tee /dev/stdout \
                            | grep -m1 -A1 '* index' \
                            | tail -1 | cut -c12-)

pacmd set-default-sink $new_sink
pacmd list-sink-inputs | grep index | while read line; do
    pacmd move-sink-input `echo $line | cut -f2 -d' '` $new_sink
done
